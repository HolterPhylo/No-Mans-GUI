<Application x:Class="NoMansGUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NoMansGUI"
             xmlns:localResources="clr-namespace:NoMansGUI.Resources">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:Bootstrapper x:Key="Boostrapper"/>
                </ResourceDictionary>
                
                <ResourceDictionary Source="./Styles/basic.xaml"/>

                <localResources:SkinResourceDictionary LightSource="./Styles/Skins/LightTheme.xaml"
                                                       DarkSource="./Styles/Skins/DarkTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
